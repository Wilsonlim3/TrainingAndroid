<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin">

    <TextView android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="New Booking"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/lbl_new_note_title"
        android:textStyle="normal" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="Select Item" />

    <Spinner
        android:id="@+id/itemSpinner"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="Select User" />

    <Spinner
        android:id="@+id/userSpinner"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="Start Date" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/in_date"
        android:layout_width="200dp"
        android:textSize="14sp"
        android:layout_height="40dp"
        android:minHeight="25dp"
        android:hint="Booking Date"
        android:textColor="#000000"
        android:background= "@drawable/border"
        android:layout_below="@+id/userSpinner"
        android:layout_marginTop="3dp"

         />

    <Button
        android:id="@+id/btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/in_date"
        android:textSize="12sp"
        android:text="SELECT DATE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/in_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:hint = "Booking Time"
            android:textSize="14sp"
            android:textColor="#000000"
            android:background= "@drawable/border"

            android:layout_below="@+id/in_date" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT TIME"
        android:id="@+id/btn_time"
            android:textSize="12sp"
        android:layout_below="@+id/btn_date"
        android:layout_alignLeft="@+id/btn_date"
        android:layout_alignStart="@+id/btn_date" />

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="End Date" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/endin_date"
            android:layout_width="200dp"
            android:textSize="14sp"
            android:layout_height="40dp"
            android:minHeight="25dp"
            android:background= "@drawable/border"
            android:hint="Booking Date"
            android:textColor="#000000"
            android:layout_below="@+id/userSpinner"

            />

        <Button
            android:id="@+id/btn_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/in_date"
            android:textSize="12sp"
            android:text="SELECT DATE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/endin_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:hint = "Booking Time"
            android:background= "@drawable/border"
            android:textSize="14sp"
            android:textColor="#000000"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT TIME"
            android:id="@+id/btn_endTime"
            android:textSize="12sp"
            android:layout_below="@+id/btn_date"
            android:layout_alignLeft="@+id/btn_date"
            android:layout_alignStart="@+id/btn_date" />

    </LinearLayout>




</LinearLayout>